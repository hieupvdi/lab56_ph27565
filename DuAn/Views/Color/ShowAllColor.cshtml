@model IEnumerable<DuAn.Models.Color>

@{
    ViewData["Title"] = "ShowAllColor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Danh Sách Màu</h1>

<p>
    <a asp-action="CreateColor">
        <button type="button" class="btn btn-primary">
        <i class="bi bi-pencil-square"> Thêm</i>
        </button></a>
</p>
<table class="table">
    <thead>
        <tr>
           @* <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
          @*  <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                  @if (item.Status == 0) {
                    <span>Còn Màu</span>
                } else {
                    <span>Hết Màu</span>
                }
            </td>
            <td>
               @Html.ActionLink("Sửa", "EditColor", new {  id=item.Id  }) |
                @Html.ActionLink("Chi Tiết", "DetailColors", new { id=item.Id  }) |
                @Html.ActionLink("Xóa", "DeleteColor", new { id=item.Id  })
            </td>
        </tr>
}
    </tbody>
</table>
