    <div class="mb-3"> 
	    <var class="price h4">@Model.Price VNĐ </var>
	    <span class="text-muted">Gía Gốc VNĐ</span> 
    </div>

    @*Mô tả*@
    <p>Mô Tả: @Model.Description</p>


    <dl class="row">
       @* nhà cung cấp*@
        <dt class="col-sm-4">Nhà Cung Cấp:</dt>
        <dd class="col-sm-8">@Model.Supplier</dd>
       @*màu*@
         @{
            var db = new DuAn.Models.ShopDbContext();
            var color = db.Colors.FirstOrDefault(c => c.Id == Model.ColorId);
            var colorName = color != null ? color.Name : "N/A";
        }
        <dt class="col-sm-4">Màu</dt>
        <dd class="col-sm-8">
            <span>@colorName</span>
        </dd>
        @*Size*@
        <dt class="col-sm-4">Size</dt> 
        <dd class="col-sm-8"> 
            <spam >không làm được</spam>
        </dd>

        @*Loại Giầy*@
        <dt class="col-sm-4">Loại Giầy:</dt>
        @{
            var Category = db.Categorys.FirstOrDefault(c => c.Id == Model.CategoryId);
            var CategoryName = Category != null ? Category.Name : "N/A";
        }
        <dd class="col-sm-8">@CategoryName</dd>
        @*Trang Thái*@
        <dt class="col-sm-4">Trang Thái</dt>
        <dd class="col-sm-8">
                @if (Model.Status == 0)
                {
                    <span>Còn Hàng</span>
                }
                else
                {
                    <span>Hết Hàng</span>
                }
        </dd>
         @*Số Lượng*@
        <dt class="col-sm-4">Số Lượng</dt>
        <dd class="col-sm-8">
           

        </dd>

    </dl>

	<div class="form-row  mt-4">
    

		<div class="form-group col-md">
			<a href="#"  class="btn  btn-primary"> 
				<i class="fas fa-shopping-cart"></i> <span class="text">@Html.ActionLink("Thêm vào giỏ hàng", "AddToCart", new { id = Model.Id })</span> 
