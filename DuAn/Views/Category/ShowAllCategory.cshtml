@model IEnumerable<DuAn.Models.Category>

@{
    ViewData["Title"] = "ShowAllCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ShowAllCategory</h1>

<p>
    <a asp-action="CreateCategory"> 
        <button type="button" class="btn btn-primary">
        <i class="bi bi-pencil-square"> Thêm</i>
        </button>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
           @* <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
          @*  <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                 @if (item.Status == 0) {
                    <span>Còn </span>
                } else {
                    <span>Hết </span>
                }
              @*  @Html.DisplayFor(modelItem => item.Status)*@
            </td>
            <td>
                @Html.ActionLink("Sửa", "EditCategory", new {  id=item.Id  }) |
                @Html.ActionLink("Chi Tiết", "DetailCategorys", new {  id=item.Id}) |
                @Html.ActionLink("Xóa", "DeleteCategory", new {  id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
